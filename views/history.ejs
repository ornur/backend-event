<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include("partials/nav.ejs") %>
    <main class="container rounded">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- History of user entered cities -->
                <h3 class="text-center mb-4">History</h3>
                <div class="list-group" style="max-height: 500px; overflow-y: auto;">
                    <% history.forEach(entry => { %>
                        <a class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">City: <%= entry.name %></h5>
                            </div>
                            <p class="mb-1">Temperature: <%= Math.round(entry.main.temp-273)%> C</p>
                            <p class="mb-1">Description: <%= entry.weather[0].description %></p>
                        </a>
                    <% }) %>
                </div>
            </div>
        </div>
        <!-- Back button -->
        <a href="/main" class="btn btn-dark float-right mt-2">Back</a>
    </main>
    <%- include("partials/footer.ejs") %>
</body>
</html>
