<!--views/edit.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" type="text/css" href="/css/admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="bg-dark" id="navibar">
        <div class="container-fluid">
            <h3 class="text-light float-start">Events Admin Panel</h3>
            <a href="/admin" class="btn text-light" role="button">Users</a>
            <a href="/logout" class="btn text-light float-end" role="button">Logout</a>
        </div>
    </nav>
    <main class="container rounded cover">
        <h1>Edit User</h1>
        <% if (isAdmin) { %>
            <form action="/admin/edit/<%= user._id %>" method="POST">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username"  class="form-control" name="username" value="<%= user.username %>" disabled>
                <br>
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" class="form-control" name="password" disabled>
                <br>
                <input type="submit" class="btn btn-primary disabled" value="Save Changes" disabled>
            </form>
        <% } else { %>
            <form action="/admin/edit/<%= user._id %>" method="POST">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username"  class="form-control" name="username" value="<%= user.username %>">
                <br>
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" class="form-control" name="password">
                <br>
                <input type="submit" class="btn btn-primary" value="Save Changes">
            </form>
       <% } %>

    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
